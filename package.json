{
  "name": "booklend",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "domain"
  ],
  "packageManager": "yarn@4.1.1",
  "scripts": {
    "build": "yarn workspaces foreach --all --verbose --interlaced --topological run build",
    "test": "yarn workspaces foreach -A -tv run test:run --clearScreen false",
    "lint": "eslint . --fix --report-unused-disable-directives",
    "lint:check": "eslint . --report-unused-disable-directives",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "yarn workspaces foreach -A run type-check",
    "verify": "yarn lint:check && yarn format:check && yarn type-check && yarn build && yarn test",
    "prepare": "husky",
    "api:dev": "yarn workspace booklend-api dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
