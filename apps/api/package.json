{
  "name": "booklend-api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "BookLend API - REST API layer for book lending application",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "app-domain": "workspace:^",
    "bcrypt": "6.0.0",
    "better-sqlite3": "^11.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/bcrypt": "6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^20.10.0",
    "@types/sqlite3": "^5.1.0",
    "nodemon": "^3.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "start": "yarn build && node dist/app.js",
    "build": "tsc -p tsconfig.app.json",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "db:seed:prod": "tsx src/scripts/seed-production.ts",
    "dev:db:setup": "tsx src/scripts/setup-dev-db.ts",
    "dev:db:seed": "tsx src/scripts/seed-dev-db.ts",
    "dev:db:init": "npm run dev:db:setup && npm run dev:db:seed",
    "dev:db:reset": "powershell -Command \"if (Test-Path 'database/booklend-dev.sqlite') { Remove-Item 'database/booklend-dev.sqlite' }\" && npm run dev:db:init"
  }
}
