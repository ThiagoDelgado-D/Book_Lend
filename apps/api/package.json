{
  "name": "booklend-api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "BookLend API - REST API layer for book lending application",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "app-domain": "workspace:^",
    "bcrypt": "6.0.0",
    "better-sqlite3": "^11.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/bcrypt": "6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^20.10.0",
    "@types/sqlite3": "^5.1.0",
    "nodemon": "^3.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "start": "yarn build && node dist/app.js",
    "build": "tsc -p tsconfig.app.json",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:setup": "tsx src/scripts/setup-db.ts",
    "db:reset": "npm run db:setup",
    "typeorm:setup": "tsx src/scripts/setup-typeorm-db.ts",
    "typeorm:seed": "tsx src/scripts/seed-typeorm-db.ts",
    "typeorm:seed:small": "tsx src/scripts/seed-typeorm-db.ts --users 5 --authors 3 --books 10",
    "typeorm:seed:large": "tsx src/scripts/seed-typeorm-db.ts --users 100 --authors 25 --books 200",
    "typeorm:seed:clear": "tsx src/scripts/seed-typeorm-db.ts --clear",
    "typeorm:seed:prod": "tsx src/scripts/seed-production.ts",
    "typeorm:reset": "rm -f data/booklend.sqlite && npm run typeorm:setup && npm run typeorm:seed",
    "typeorm:reset:prod": "rm -f data/booklend.sqlite && npm run typeorm:setup && npm run typeorm:seed:prod"
  }
}
